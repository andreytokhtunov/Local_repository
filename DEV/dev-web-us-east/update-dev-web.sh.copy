#!/bin/bash

BRANCH=dev

jarvis_say_start_update(){
  echo $BRANCH
  curl -X POST -H 'Content-type: application/json' \
  --data '{"attachments":[{"color":"good","title":"dev-web update","title_link":"https://dev-web.adlithium.com/","pretext":"<@ygrigortsevich> <@alonasotnikova> <@vitaliy.reshetnyk> <@bernard.torres> <@nikita_roylyan> <@victordementiev> <@alexander>","text":"dev-web is updating.","mrkdwn_in":["text"],"fields":[{"title":"Host","value":"dev-web.adlithium.com","short":true},{"title":"Branch","value": "'$BRANCH'","short":true}]}]}' \
  https://hooks.slack.com/services/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
}

jarvis_say_success(){
  curl -X POST -H 'Content-type: application/json' \
  --data '{"attachments":[{"color":"good","title":"dev-web update","title_link":"https://dev-web.adlithium.com/","pretext":"<@ygrigortsevich> <@alonasotnikova> <@vitaliy.reshetnyk> <@bernard.torres> <@nikita_roylyan> <@victordementiev> <@alexander>","text":"dev-web update completed.","mrkdwn_in":["text"],"fields":[{"title":"Host","value":"dev-web.adlithium.com","short":true},{"title":"Branch","value": "'$BRANCH'","short":true}]}]}' \
  https://hooks.slack.com/services/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
}

jarvis_say_fail(){
  curl -X POST -H 'Content-type: application/json' \
  --data '{"attachments":[{"color":"danger","title":"dev-web update","title_link":"https://dev-web.adlithium.com/","pretext":"<@ygrigortsevich> <@alonasotnikova> <@vitaliy.reshetnyk> <@bernard.torres> <@nikita_roylyan> <@victordementiev> <@alexander>","text":"dev-web update failed.","mrkdwn_in":["text"],"fields":[{"title":"Host","value":"dev-web.adlithium.com","short":true},{"title":"Branch","value":"'$BRANCH'","short":true}]}]}' \
  https://hooks.slack.com/services/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
}


update_dev_web(){
  jarvis_say_start_update
  forever stopall

  cd /home/skaag/sites/dev-web.adlithium.com/arbigo-web
  ./deploy-dev-us-east.sh $BRANCH

  sleep 3
  echo ------------------------
  forever logs 0
  echo ------------------------

  sudo netstat -tulpn | grep 3000 | grep node &> /dev/null
  if [ $? == 0 ];
  then
    jarvis_say_success
  else
    jarvis_say_fail
  fi
}


update_dev_web
