server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    server_name dev-db-us-east.adlithium.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;

    server_name dev-db-us-east.adlithium.com;

    index index.html index.htm index.php;

    root /usr/share/nginx/phpPgAdmin-5.1;

    ssl_certificate /etc/letsencrypt/live/dev-db-us-east.adlithium.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev-db-us-east.adlithium.com/privkey.pem;

    # add Strict-Transport-Security to prevent man in the middle attacks
    add_header Strict-Transport-Security "max-age=31536000";

    access_log off;

    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
    }
}

